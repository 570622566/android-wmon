<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add Networks and Devices:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonAddNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By A List of Nearby Networks and Devices" />

    <Button
        android:id="@+id/buttonAddProximity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Holding Your Phone Up to a Device" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Manage Your Networks and Devices:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonManageDevs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show My Networks and Devices" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Resolve Problems With Your Devices:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonSuggestChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Me Suggested Changes" />

    <Button
        android:id="@+id/buttonNotWorking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Device is Not Working..." />
    
    <ScrollView android:id="@+id/ScrollView01"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:id="@+id/textStatus"
      android:layout_marginTop="10dp"
       android:textColor="#ff0000"
      android:text="Error text box..." />
  	</ScrollView>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="45dp"
        android:text="Show advanced information" />

</LinearLayout>