<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

     <TextView
	     android:id="@+id/heading"
	     android:layout_marginTop="15dp"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:text="Welcome!"
	     android:layout_marginLeft="5dp"
	     android:textSize="40sp"
	     android:textStyle="italic"
	     />
     
     
    <TextView
        android:id="@+id/overview"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/heading"
        android:text="    We are going to begin by training your smartphone to understand what networks and devices belong to your home.  The process is one-time only and should take 5-10 minutes."
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/overview"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:text="    Let's begin with your home Wi-Fi network. Please select it from the list:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/network_list"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="105dp"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/network_list"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:onClick="clickedFinished"
        android:text="Next" />


</RelativeLayout>
